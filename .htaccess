# schedule-builder/.htaccess
# Requires: mod_rewrite enabled (RewriteEngine On)
# Assumes project root is the web root (so /public and /server are reachable)

Options -Indexes

RewriteEngine On

# --- Safety: do not rewrite real files or directories ---
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# --- /s/<id> -> /server/pages/s.php?id=<id> ---
RewriteRule ^s/([0-9A-Za-z]{6,24})/?$ /server/pages/s.php?id=$1 [L,QSA,NC]

# --- /embed/<id> -> /server/pages/embed.php?id=<id> ---
RewriteRule ^embed/([0-9A-Za-z]{6,24})/?$ /server/pages/embed.php?id=$1 [L,QSA,NC]
